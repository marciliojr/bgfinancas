<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.badernageral.bgfinancas.template.barra.BarraItem">
   <children>
      <GridPane hgap="10.0">
        <children>
           <fx:include fx:id="filtro" source="Filtro.fxml" GridPane.columnIndex="2" />
           <fx:include fx:id="botao" source="../botao/BotaoPadrao.fxml" />
           <fx:include fx:id="botaoCategoria" source="../botao/BotaoGerenciarCategoria.fxml" GridPane.columnIndex="1" />
        </children>
        <columnConstraints>
           <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" />
           <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
           <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
           <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
        <padding>
           <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
        </padding>
     </GridPane>
   </children>
</StackPane>
